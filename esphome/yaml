  on_idle:
    timeout: !lambda |-
      int timeout = id(auto_off).state;
      return (timeout == -1) ? 86400000 : (timeout * 1000);  // 24h si désactivé
    then:
      - if:
          condition:
            lambda: 'return id(auto_off).state > 0;'
          then:
            - light.turn_off: backlight

      

